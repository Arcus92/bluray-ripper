<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MediaRipper.ViewModels"
             xmlns:utils="clr-namespace:MediaRipper.Utils"
             xmlns:avalonia="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MediaRipper.Views.QueueSettingsView"
             x:DataType="vm:QueueSettingsViewModel"
             Design.DataContext="{utils:DesignResolve {x:Type vm:QueueSettingsViewModel}}">
    
    <Border Padding="10,5">
        <DockPanel>
            <StackPanel Orientation="Horizontal" Spacing="5" DockPanel.Dock="Right">
                <Button Command="{Binding OpenSettings}">
                    <avalonia:FluentIcon Icon="Settings" />
                </Button>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Command="{Binding StartQueue}"
                        IsVisible="{Binding !IsRunning}"
                        IsEnabled="{Binding CanStartQueue}">
                    <avalonia:FluentIcon Icon="Play" />
                </Button>
                
                <Button Command="{Binding StopQueue}"
                        IsVisible="{Binding IsRunning}">
                    <avalonia:FluentIcon Icon="Stop" />
                </Button>
            </StackPanel>
        </DockPanel>
    </Border>
    
</UserControl>
