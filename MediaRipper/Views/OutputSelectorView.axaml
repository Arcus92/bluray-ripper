<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MediaRipper.ViewModels"
             xmlns:utils="clr-namespace:MediaRipper.Utils"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
             x:Class="MediaRipper.Views.OutputSelectorView"
             x:DataType="vm:OutputSelectorViewModel"
             Design.DataContext="{utils:DesignResolve {x:Type vm:OutputSelectorViewModel}}">
    
    <Border Padding="10">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox Width="250" Text="{Binding OutputPath}"></TextBox>
        </StackPanel>
    </Border>
    
</UserControl>
